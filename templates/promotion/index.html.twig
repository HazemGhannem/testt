{% extends 'backtemplate/base.html.twig' %}

{% block title %}Promotion index{% endblock %}

{% block body %}
    <h1>Promotion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Pourcentage</th>
                <th>Description</th>
                <th>Prixoriginal</th>
                <th>Prixpromotion</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.nom }}</td>
                <td>{{ promotion.pourcentage}}</td>
                <td>{{ promotion.description}}</td>
                <td>{{ promotion.prixoriginal}}</td>
                <td>{{ promotion.prixpromotion}}</td>
                <td>{{ promotion.datedebut|date('d/m/Y')}}</td>
                <td>{{ promotion.datefin|date('d/m/Y')}}</td>
                <td><img id="img"  class="card-img-top img-fluid" style="height: 150px; width:250px;" src="/uploads/{{promotion.image}}"></td>
                <td>
                    <a class="btn btn-dark" href="{{ path('promotion_show', {'id': promotion.id}) }}">show</a>
                    <a class="btn btn-dark" href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('promotion_new') }}">Create new</a>
    <div class="container py-5">
		<div class="d-flex justify-content-center">
 {{ knp_pagination_render(promotions) }}

</div>
	</div>
{% endblock %}

{% extends 'backtemplate/base.html.twig' %}

{% block title %}Coupon index{% endblock %}

{% block body %}
    <h1>Coupon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Code</th>
                <th>Pourcentage</th>
                <th>Datedebut</th>
                <th>Datefin</th>
            </tr>
        </thead>
        <tbody>
        {% for coupon in coupons %}
            <tr>
                <td>{{ coupon.id }}</td>
                <td>{{ coupon.nom }}</td>
                <td>{{ coupon.code }}</td>
                <td>{{ coupon.pourcentage }}</td>
                <td>{{ coupon.datedebut|date('d/m/Y') }}</td>
                <td>{{ coupon.datefin|date('d/m/Y') }}</td>
                <td>
                    <a class="btn btn-dark" href="{{ path('coupon_show', {'id': coupon.id}) }}">show</a>
                    <a class="btn btn-dark" href="{{ path('coupon_edit', {'id': coupon.id}) }}">edit</a>
                     <a class="btn btn-dark" href="{{ path('coupon_pdf', {'id': coupon.id}) }}">pdf</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('coupon_new') }}">Create new</a>
    <div class="container py-5">
		<div class="d-flex justify-content-center">
 {{ knp_pagination_render(coupons) }}

</div>
	</div>
     
{% endblock %}
